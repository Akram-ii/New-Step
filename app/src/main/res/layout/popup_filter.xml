<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@drawable/goal_background_item"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    >
<ImageView
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/back_ic"
    app:tint="@color/blue"
    android:id="@+id/backBtn"
    android:layout_marginBottom="10dp"
    />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What are you into today?"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />


    <com.google.android.material.chip.ChipGroup
        android:layout_marginTop="10dp"
android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBtn"
        android:id="@+id/chipGroup">
<com.google.android.material.chip.Chip
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/exp"
    app:checkedIconTint="@color/white"
    style="@style/Widget.MaterialComponents.Chip.Filter"
    android:text="My Experiences"
    app:chipBackgroundColor="@color/blue"
    android:textColor="@color/white"
    android:textSize="14sp"
    />
        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/help"
            android:text="Ask for help"
            android:textColor="@color/white"
            android:textSize="14sp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:text="Motivation"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            android:text="Reflection"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/reflection"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            />
        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Advices"
            android:id="@+id/advices"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Progress Update"
            android:id="@+id/progressU"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Challenges"
            android:id="@+id/challenges"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/blue"
            app:checkedIconTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/other"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Other"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </com.google.android.material.chip.ChipGroup>

    <LinearLayout

        android:id="@+id/t"
        android:orientation="horizontal"
        android:layout_below="@id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageButton
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginRight="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Check All"
        android:src="@drawable/icon_checked_round"
        android:layout_marginTop="10dp"
        android:id="@+id/selectAll"
        android:backgroundTint="@color/blue"
        app:tint="@color/blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:layout_alignEnd="@+id/selectAll"
                android:textAlignment="center"
                android:layout_alignStart="@+id/selectAll"
                android:textSize="16sp"
                android:layout_below="@id/selectAll"

                />
        </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginLeft="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_round"
        android:layout_marginTop="10dp"
        app:cornerRadius="20dp"
        android:id="@+id/reset"
        android:backgroundTint="@color/blue"
        app:tint="@color/blue" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:layout_alignEnd="@+id/reset"
        android:textAlignment="center"
        android:layout_alignStart="@+id/reset"
        android:textSize="16sp"
        android:layout_below="@id/reset"

        />
</RelativeLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Now"
        android:textSize="17sp"
        android:id="@+id/filterNow"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/t"
        android:layout_marginTop="20dp"
        app:cornerRadius="15dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/blue"
        />
</RelativeLayout>