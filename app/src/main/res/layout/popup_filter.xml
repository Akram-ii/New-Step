<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:elevation="10dp"
    android:backgroundTint="@color/transparent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/popupbg"
        android:padding="15dp">


    <TextView
        android:id="@+id/textTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Filter Reports"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:paddingBottom="12dp"
    android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_marginTop="10dp">


    <Button
        android:id="@+id/sortByReportsAsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popupbg"
        app:backgroundTint="#9073CE"
        android:text=" Ascending "
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/sortByReportsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popupbg"
        app:backgroundTint="#9073CE"
        android:text="Descending"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/sortByNewest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        app:backgroundTint="#9073CE"
        android:text="    Newest   "
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/sortByOldest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popupbg"
        app:backgroundTint="#9073CE"
        android:text="    Oldest    "
        android:textColor="@android:color/white"/>
</LinearLayout>

    </RelativeLayout>
    </LinearLayout>
