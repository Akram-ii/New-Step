<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:elevation="10dp"
    android:backgroundTint="#80000000 "
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/light_blue"
        android:background="@drawable/popupbg"
        android:padding="15dp">

<ImageView
    android:layout_marginLeft="7dp"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/back_ic"
    app:tint="@color/black"
    android:id="@+id/back_imageView"
    />


        <ImageView
            android:id="@+id/warningIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            app:tint="@color/red_for_buttons"
            android:src="@drawable/icon_banned"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are banned"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/warningIcon"
            android:layout_centerHorizontal="true"
            android:paddingTop="8dp"
            android:gravity="center"/>


        <TextView
            android:id="@+id/textMessage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This account has been banned due to a violation of our community guidelines. This action was taken after a thorough review of your activity."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_below="@id/title"
            android:layout_marginHorizontal="15dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="4dp"/>
        <TextView

            android:id="@+id/textMessage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you believe this was a mistake, you may appeal the decision by contacting our support team within 3 days."
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/textMessage1"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:lineSpacingExtra="4dp"/>
    </RelativeLayout>
</LinearLayout>
