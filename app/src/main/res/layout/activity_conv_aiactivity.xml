<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/PurpleBackg"
    android:fitsSystemWindows="true"
    tools:context=".ConvAIActivity">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:paddingTop="25dp"
      android:background="@color/transparent"
      android:titleTextColor="@color/white" />


  <ImageButton

      android:id="@+id/back_ImageButton"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="15dp"
      android:layout_alignTop="@id/toolbar"
      android:layout_alignParentStart="true"
      android:src="@drawable/icon_back"
      android:background="?attr/selectableItemBackgroundBorderless" />


  <ImageView
      android:id="@+id/pfp"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginStart="50dp"
      android:layout_alignTop="@id/toolbar"
      android:src="@drawable/ai" />


  <ImageView
      android:id="@+id/activity"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginStart="100dp"
      android:layout_marginTop="5dp"
      android:layout_alignTop="@id/toolbar" />


  <TextView
      android:id="@+id/milo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/pfp"
      android:layout_marginStart="5dp"
      android:text="Milo"
      android:gravity="center"
      android:textStyle="bold"
      android:layout_alignTop="@+id/pfp"
      android:layout_alignBottom="@+id/pfp"
      android:textColor="@color/white"
      android:textSize="24sp" />


  <RelativeLayout
      android:id="@+id/recyclerLayout"
      android:layout_width="match_parent"
      android:layout_height="590dp"
      android:layout_below="@id/toolbar"
      android:layout_marginBottom="10dp"
      android:layout_above="@id/input_layout"
      android:background="@drawable/chat_background"
      android:backgroundTint="?attr/backgroundColor"
      android:layout_marginHorizontal="2dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/msgsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="always"
        android:padding="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:paddingHorizontal="30dp"
        style="@style/Text"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Hey, I'm Milo! Feel free to chat with me about anything, I'm here to help"
        android:id="@+id/intr"
        />
  </RelativeLayout>


  <RelativeLayout
      android:id="@+id/input_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:padding="6dp"
      style="@style/PurpleBackg">

    <EditText
        android:id="@+id/msg_EditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/popupbg"
        android:backgroundTint="@color/white"
        android:hint="Message..."
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGray" />

    <ImageButton
        android:id="@+id/send_ImageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="8dp"
        android:rotation="90"
        android:src="@drawable/icon_send" />
  </RelativeLayout>

</RelativeLayout>


