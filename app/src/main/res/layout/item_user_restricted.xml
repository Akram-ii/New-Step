<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/textview_background"
    android:elevation="10dp">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="@color/purple"
                android:layout_width="wrap_content"
                android:id="@+id/usernameTextView"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="20sp" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/nb"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This user got reported "
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555 "
            android:id="@+id/nb_reports"
            android:textColor="@color/red_for_buttons"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="times"
            android:id="@+id/times_textview"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <View
        android:layout_alignStart="@+id/nb"
        android:layout_alignEnd="@+id/nb"
        android:layout_marginHorizontal="100dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        tools:ignore="NotSibling" />
    </RelativeLayout>
    <LinearLayout

        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
   <LinearLayout
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/post_ban"
       android:layout_marginRight="10dp"
       android:orientation="horizontal">
       <ImageView
           android:clickable="false"
           android:src="@drawable/icon_lock"
           android:layout_width="25dp"
           android:background="?attr/selectableItemBackgroundBorderless"
           android:layout_height="25dp"
           app:tint="@color/black" />
       <ImageView
           android:clickable="false"
           android:src="@drawable/icon_community"
           android:layout_width="25dp"
           android:background="?attr/selectableItemBackgroundBorderless"
           android:layout_height="25dp"

           app:tint="@color/black" />
       <TextView
           android:textColor="@color/black"
           android:id="@+id/time_ban_posts"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=": MAR 22 2025"/>
   </LinearLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
        <View
            android:layout_below="@+id/nb"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/black"
            android:id="@+id/sep"
            tools:ignore="NotSibling" />
       </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_ban"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            app:tint="@color/black"
            android:layout_width="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            android:src="@drawable/icon_lock"
           />
        <ImageView
            android:src="@drawable/comment"
            android:layout_width="25dp"
            android:clickable="false"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            app:tint="@color/black" />
        <TextView
            android:textColor="@color/black"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:id="@+id/time_ban_comment"
            android:layout_height="wrap_content"
            android:text=": MAR 23 2025"/>
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/unban_posts"
        android:layout_marginRight="10dp"
        android:background="@drawable/textview_background"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            app:tint="@color/purple"
            android:layout_width="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            android:src="@drawable/icon_unlock"
            />
        <ImageView
            android:src="@drawable/icon_community"
            android:layout_width="25dp"
            android:clickable="false"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            app:tint="@color/purple" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/unban_comments"
android:layout_marginLeft="10dp"
        android:background="@drawable/textview_background"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            app:tint="@color/purple"
            android:layout_width="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            android:src="@drawable/icon_unlock"
            />
        <ImageView
            android:src="@drawable/comment"
            android:layout_width="25dp"
            android:clickable="false"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            app:tint="@color/purple" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>


