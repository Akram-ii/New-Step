<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/textview_background"
    android:elevation="10dp"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_marginTop="3dp"
            android:textColor="@color/purple"
            android:layout_width="wrap_content"
            android:id="@+id/bannedUsername"
            android:layout_height="wrap_content"
            android:text="Banned User"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This user got reported "
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555 "
            android:id="@+id/nbR"
            android:textColor="@color/red_for_buttons"
            android:textStyle="bold"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:clickable="false"
            android:src="@drawable/icon_lock"
            android:layout_width="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"
            app:tint="@color/black" />
        <ImageView
            android:clickable="false"
            android:src="@drawable/pfp_blue"
            android:layout_width="25dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="25dp"

            app:tint="@color/black" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/time_ban_account"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": MAR 22 2025"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unban_account"
            android:background="@drawable/textview_background"
            android:padding="6dp"
            android:orientation="horizontal"

           >

            <ImageView
                android:clickable="false"
                app:tint="@color/purple"
                android:layout_width="25dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="25dp"
                android:src="@drawable/icon_unlock"/>

            <ImageView
                android:src="@drawable/pfp_blue"
                android:layout_width="25dp"
                android:clickable="false"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="25dp"
                app:tint="@color/purple"

               />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>










