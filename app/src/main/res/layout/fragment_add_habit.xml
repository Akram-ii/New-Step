<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragments.AddHabitFragment">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:hint="What is your bad habit/addiction ?"
        android:textAlignment="center"
        android:maxLines="1"
        android:textColorHint="@color/gray"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:imeOptions="actionDone"
        android:id="@+id/name_EditText"
        />

    <TextView
        android:background="@drawable/textview_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:hint="What does it affect in your life ?"
        android:textColorHint="@color/gray"
        android:backgroundTint="@color/transparent"
        android:layout_marginTop="20dp"
        android:layout_below="@id/name_EditText"
        android:id="@+id/cat_EditText"
        />
    <View
        android:layout_marginRight="7dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/cat_EditText"
        android:layout_alignStart="@id/cat_EditText"
        android:layout_alignEnd="@id/cat_EditText"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:hint="Emergency message (optional)"
        android:textColorHint="@color/gray"
        android:layout_marginTop="20dp"
        android:maxLines="5"
        android:id="@+id/emergency_EditText"
        android:layout_below="@+id/cat_EditText"

        />
    <TextView
        android:background="@drawable/edittext_onblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="15sp"
        android:hint="When was the last time ?"
        android:textColorHint="@color/gray"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/emergency_EditText"
        android:id="@+id/lastTime_TextView"

        />
    <TextView
        android:background="@drawable/edittext_onblue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="15sp"
        android:hint="Reminder time (optional)"
        android:textColorHint="@color/gray"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lastTime_TextView"
        android:id="@+id/reminderTime_TextView"
        />

    <Button
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminderTime_TextView"
        android:layout_marginHorizontal="50dp"
        android:text="Add Habit"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="30dp"
        android:id="@+id/addHabitBtn"

        />

</RelativeLayout>