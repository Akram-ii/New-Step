<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/filter_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_popup"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_ic"
            app:tint="@color/black"
            android:layout_marginEnd="8dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you want?"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </LinearLayout>


    <EditText
        android:id="@+id/searchGroupName"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:hint="Search group by name"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/quote_background"
        android:drawableStart="@drawable/icon_cancel"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/layout"
        android:drawablePadding="12dp" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/privacyChipGroup"
        android:layout_below="@id/searchGroupName"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false">

        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Private"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />

        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Public"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />

        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Popular"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Very Popular"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Most Popular"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Active Today"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Newest"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Oldest"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
        <com.google.android.material.chip.Chip

            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="My Groups"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="All"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:chipBackgroundColor="@color/blue"
            android:textColor="@color/white"
            app:checkedIconTint="@color/white" />
    </com.google.android.material.chip.ChipGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFilterNow"
        android:layout_below="@id/privacyChipGroup"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Now"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/blue" />
</RelativeLayout>


