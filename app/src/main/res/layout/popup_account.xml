<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/goal_background_item"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/back_ic"
    android:layout_margin="10dp"
    app:tint="@color/black"
    android:id="@+id/back"
    />
    <TextView
        android:layout_below="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who can send me a message"
        android:textSize="20sp"
        android:id="@+id/t1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_below="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/r1"
        android:padding="4dp"
        android:background="@drawable/goal_background_item"
        android:backgroundTint="@color/white"
        >

        <RadioGroup

android:layout_centerHorizontal="true"
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:id="@+id/radioPublic"
                android:buttonTint="@color/blue"
                android:layout_height="wrap_content"
                android:text="Everyone"
                android:textColor="@color/black"/>
            <RadioButton
                android:buttonTint="@color/blue"
                android:id="@+id/radioPrivate"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nobody"
                android:textColor="@color/black"/>
        </RadioGroup>
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@+id/r1"
        android:id="@+id/v1"
        android:layout_marginHorizontal="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Credentials"
        android:textSize="20sp"
        android:id="@+id/t2"
        android:layout_below="@id/v1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
<RelativeLayout
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="7dp"
    android:layout_below="@id/t2"
    android:id="@+id/r2"
    android:layout_margin="5dp"
    >
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/icmail"
        android:background="@drawable/mail"
        app:tint="@color/black" />
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/emailEdit"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTextView"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_alignStart="@id/icmail"
        android:hint="Loading..."
        android:paddingLeft="50dp"
        android:textSize="18sp"/>
    <View
        android:id="@+id/dive"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/emailTextView"
        android:background="@color/darkGray"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_admin"
        android:id="@+id/icpass"
        android:layout_below="@id/dive"
        android:background="@drawable/icon_admin"
        app:tint="@color/black" />
    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/passwordEdit"
        android:layout_below="@id/dive"
        android:src="@drawable/edit"
        android:layout_alignParentRight="true"
        app:tint="@color/black"
        android:background="?attr/selectableItemBackgroundBorderless"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTextView"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:layout_below="@id/dive"
        android:textColorHint="@color/black"
        android:layout_alignStart="@id/icpass"
        android:hint="******"
        android:paddingLeft="50dp"
        android:textSize="18sp"/>

</RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@+id/r2"
        android:id="@+id/v2"
        android:layout_marginHorizontal="30dp"
        />
<TextView
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Account Created On"
    android:id="@+id/t3"
    android:layout_below="@+id/v2"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:layout_marginLeft="5dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAR 23 2035"
        android:layout_alignTop="@+id/t3"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/t3"
        android:layout_toRightOf="@+id/t3"
        android:layout_marginRight="10dp"
        />
<com.google.android.material.button.MaterialButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Logout"
    android:id="@+id/logout"
    app:cornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="3dp"
    android:paddingLeft="15dp"
    android:elevation="10dp"
    android:textAlignment="textStart"
    android:textColor="@color/black"
    android:layout_below="@+id/t3"
    android:drawableTint="@color/black"
    android:drawableRight="@drawable/ic_arrow_right"

    android:backgroundTint="@color/white"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/red_for_buttons"
        android:layout_below="@+id/logout"
        android:id="@+id/delete"
        android:layout_marginVertical="10dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:text="Delete Account"
        />
</RelativeLayout>